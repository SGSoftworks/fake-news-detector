# Configuración de Producción - Sistema de Detección de Noticias Falsas
# Copia este archivo como .env y configura las variables

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
PORT=3001
NODE_ENV=production
CORS_ORIGIN=https://tu-dominio.com

# ========================================
# APIs DE INTELIGENCIA ARTIFICIAL
# ========================================

# Google Gemini API (Recomendado)
GEMINI_API_KEY=tu_gemini_api_key_aqui
GEMINI_MODEL=gemini-1.5-flash

# Hugging Face API (Opcional)
HUGGINGFACE_API_KEY=tu_huggingface_api_key_aqui
HUGGINGFACE_MODEL=nlptown/bert-base-multilingual-uncased-sentiment

# ========================================
# CONFIGURACIÓN DE ANÁLISIS
# ========================================

# Ponderaciones de los modelos (deben sumar 1.0)
LOCAL_WEIGHT=0.2
HUGGINGFACE_WEIGHT=0.3
GEMINI_WEIGHT=0.5

# Umbrales de confianza
FAKE_THRESHOLD=60
HIGH_CONFIDENCE_THRESHOLD=80

# Timeouts para APIs (en milisegundos)
HUGGINGFACE_TIMEOUT=15000
GEMINI_TIMEOUT=12000

# ========================================
# VERIFICACIÓN EXTERNA
# ========================================

# Habilitar verificación externa
VERIFICATION_ENABLED=true
SOURCE_ANALYSIS_ENABLED=true

# APIs para verificación (opcionales)
# Google Custom Search API (Recomendado para búsquedas)
GOOGLE_SEARCH_API_KEY=tu_google_search_api_key_aqui
GOOGLE_CUSTOM_SEARCH_ID=tu_google_custom_search_id_aqui

# News API (Alternativa)
NEWS_API_KEY=tu_news_api_key_aqui

# Configuración de verificación
MAX_RELATED_ARTICLES=5
MAX_SEARCH_RESULTS=10
VERIFICATION_TIMEOUT=10000

# ========================================
# SEGURIDAD Y RENDIMIENTO
# ========================================

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# MONITOREO
# ========================================

# Health check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Métricas
METRICS_ENABLED=true
METRICS_PORT=3002
