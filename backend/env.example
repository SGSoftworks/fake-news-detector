# Configuración del Servidor
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=nlptown/bert-base-multilingual-uncased-sentiment
HUGGINGFACE_ENABLED=false

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_ENABLED=false

# Análisis Combinado - Ponderaciones
LOCAL_WEIGHT=0.2
HUGGINGFACE_WEIGHT=0.3
GEMINI_WEIGHT=0.5

# Umbrales de Confianza
FAKE_THRESHOLD=60
HIGH_CONFIDENCE_THRESHOLD=80

# Timeouts (en milisegundos)
HUGGINGFACE_TIMEOUT=15000
GEMINI_TIMEOUT=12000

# Configuración de Verificación Externa
VERIFICATION_ENABLED=true
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Configuración de Análisis de Fuentes
SOURCE_ANALYSIS_ENABLED=true
MAX_RELATED_ARTICLES=5
VERIFICATION_TIMEOUT=10000
