# Configuración del Backend para Producción
NODE_ENV=production
PORT=3001

# Configuración de CORS para producción
CORS_ORIGIN=https://fake-news-detector-backend-isha7z15v-jgsoftworks-projects.vercel.app

# APIs de IA (las claves reales están en Vercel)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=nlptown/bert-base-multilingual-uncased-sentiment
HUGGINGFACE_ENABLED=true

GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_ENABLED=true

# Configuración de Análisis
LOCAL_WEIGHT=0.2
HUGGINGFACE_WEIGHT=0.3
GEMINI_WEIGHT=0.5

# Umbrales
FAKE_THRESHOLD=60
HIGH_CONFIDENCE_THRESHOLD=80

# Timeouts
HUGGINGFACE_TIMEOUT=15000
GEMINI_TIMEOUT=12000

# Verificación Externa
VERIFICATION_ENABLED=true
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_CUSTOM_SEARCH_ID=your_google_custom_search_id_here
MAX_SEARCH_RESULTS=10

# Análisis de Fuentes
SOURCE_ANALYSIS_ENABLED=true
MAX_RELATED_ARTICLES=5
VERIFICATION_TIMEOUT=10000
